{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
        "/src/*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "copyFiles": {
      "include": ["src/**/*.html"],
      "outDir": "dist"
    }
  }